<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="repository.vincentjenei" name="Vincent's Repo" version="1.0.0" provider-name="Vincent Jenei">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Vincent's Repo">
            <info compressed="false">https://raw.githubusercontent.com/vincentjenei/repo/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/vincentjenei/repo/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/vincentjenei/repo/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>I may occasionally put addons on here.</summary>
            <description>The KODI Github repo for Vincent.</description>
            <platform>all</platform>
    </extension>
</addon>

<addon id="resource.uisounds.wii" version="1.0.2" name="Wii GUI Sounds" provider-name="Vincent Jenei">
  <requires>
    <import addon="kodi.resource" version="1.0.0"/>
  </requires>
  <extension point="kodi.resource.uisounds"/>
  <extension point="kodi.addon.metadata">
    <summary lang="en">Wii GUI Sounds</summary>
    <description lang="en">The GUI sounds ripped straight from the wii.</description>
    <platform>all</platform>
  </extension>
</addon>
</addons>
